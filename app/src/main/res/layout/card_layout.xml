<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    tools:context="id.ac.uin_malang.application.home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wong"
            android:layout_width="380dp"
            android:layout_height="180dp"
            android:id="@+id/imgHome"/>
        <TextView
            android:layout_below="@+id/imgHome"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="JUDUL"
            android:textSize="25dp"
            android:id="@+id/judulHome"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal : "
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="15dp"
            android:id="@+id/tanggall"
            android:layout_below="@+id/judulHome"

            />

        <TextView
            android:layout_toRightOf="@+id/tanggall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="15dp"
            android:id="@+id/tanggalHome"
            android:layout_below="@+id/judulHome"

            />
    </RelativeLayout>

</android.support.v7.widget.CardView>